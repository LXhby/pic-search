/* pages/index.wxss */
image.bgpic{
  width: 100vw;
  height: 100vh;
  filter: blur(20px)
}
.ipt{
  position: absolute;
  width: 100%;
  top: 300rpx;
}
.ipt .text{
  margin-bottom: 20rpx;
  text-align: center;
  color:#fff;
  font-weight: bold;
  font-size: 20px;
}
.search-form{
  display: block;
  padding: 3px 5px;
  overflow: hidden;
  border: 1px solid #fff;
  border-radius: 5px;
  color: #fff;
}
.search-form button{
  float: right;
  margin-left: 5px;
  width: 35px;
  height: 35px;
  background: transparent;
}
.search-form button::after{
  border: none;
}
.search-form button image{
  display: block;
  width: 100%;
  height: 100%;
}
.search-form input{
  height: 35px;
}
.like{
  display: flex;
  flex-wrap: wrap;
  padding-top: 5px;
}
.like navigator{
  text-align: center;
  width: 25%;
  padding: 3px 0;
  font-size: 16px;
}